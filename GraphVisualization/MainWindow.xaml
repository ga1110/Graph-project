<Window x:Class="GraphVisualization.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowState="Maximized"
        Title="Graph Visualization"
        ResizeMode="NoResize">

    <Grid>
        <!-- Контейнер для графа -->
        <Grid x:Name="graphContainer">
            <!-- Граф будет отображаться здесь -->
        </Grid>

        <!-- Кнопка "Добавить ребро" поверх всего -->
        <Button x:Name="AddEdgeButton"
                Content="Добавить ребро"
                Width="120"
                Height="40"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="10"
                Click="AddEdgeButton_Click"
                Panel.ZIndex="1"
                Opacity="0.9"
                Background="LightBlue"
                FontWeight="Bold"/>
    </Grid>
</Window>
