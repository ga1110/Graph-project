<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="GraphVisualization.MainWindow"
        WindowState="Maximized"
        Title="Graph Visualization" av:DesignHeight="118.054" av:DesignWidth="163.421">

    <Grid>
        <!-- Контейнер для графа -->
        <Grid x:Name="graphContainer">
            <!-- Граф будет отображаться здесь -->
        </Grid>

        <!-- Кнопка "Добавить ребро" поверх всего -->
        <Button x:Name="AddEdgeButton"
                Content="Добавить ребро"
                Width="120"
                Height="40"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="10"
                Click="AddEdgeButton_Click"
                Panel.ZIndex="1"
                Opacity="1"
                Background="LightBlue"
                FontWeight="Bold"/>
    </Grid>
</Window>
